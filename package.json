{
    "name": "weather-api",
    "version": "1.0.0",
    "description": "Weather API with authentication, caching, rate limiting, and messaging.",
    "main": "src/index.ts",
    "scripts": {
        "start": "node dist/.",
        "start:dev": "ts-node src/.",
        "watch": "tsc-watch --onSuccess 'node dist/index.js'",
        "build": "tsc",
        "test": "jest --runInBand",
        "test:cypress": "npx cypress run",
        "docker:up": "docker-compose up --build",
        "docker:down": "docker-compose down"
    },
    "dependencies": {
        "amqplib": "^0.10.4",
        "body-parser": "^1.20.1",
        "dotenv": "^16.4.5",
        "express": "^4.18.2",
        "jwt-simple": "^0.5.6",
        "nodemailer": "^6.9.1",
        "pg": "^8.12.0",
        "redis": "^4.7.0"
    },
    "devDependencies": {
        "@types/amqplib": "^0.10.5",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.4.1",
        "@types/nodemailer": "^6.4.7",
        "@types/pg": "^8.11.6",
        "@types/supertest": "^6.0.2",
        "cypress": "^13.13.2",
        "jest": "^29.7.0",
        "supertest": "^6.3.4",
        "ts-jest": "^29.2.4",
        "ts-node": "^10.9.1",
        "tsc-watch": "^6.2.0",
        "typescript": "^5.0.4"
    }
}
